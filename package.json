{
  "name": "todo",
  "version": "1.0.0",
  "description": "Simple todo app",
  "private": true,
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "2.27.0",
    "@typescript-eslint/parser": "2.27.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.1.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-flowtype": "4.7.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "3.0.0",
    "lerna": "3.20.2",
    "typescript": "3.8.3"
  },
  "workspaces": [
    "packages/**/*"
  ],
  "scripts": {
    "test": "test",
    "lint": "eslint ./packages/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "yarn lint --fix",
    "stencil:start": "lerna run --parallel --scope=@todo/design-system start",
    "stencil:storybook": "lerna run --parallel --scope=@todo/design-system storybook",
    "react:start": "lerna run --scope=@todo/react start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/niedzielnyaniol/todo.git"
  },
  "author": "niedzielnyaniol",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/niedzielnyaniol/todo/issues"
  },
  "homepage": "https://github.com/niedzielnyaniol/todo#readme"
}
